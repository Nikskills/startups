generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Startup {
  id Int @id @default(autoincrement())
  title String 
  slug String @unique
  description String
  author String
  views Int
  category String
  pitch String
  image String
}

model User {
  id      String @id @default(uuid())
  email   String   @unique
  name    String?
  username String
  password String
}

